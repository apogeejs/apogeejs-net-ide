{
    "repoName": "apogeejs-net-ide",
    "taskList": [
        {
            "type": "copyAndReplace",
            "srcFileUrl": "/apogeejs-net-ide/package.json",
            "replacementList": [
                {
                    "marker": "[2.0.0-DEV-VERSION]",
                    "lib": "this",
                    "type": "version"
                }
            ]
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-net-ide/electron-cli.js"
            ]
        },
        {
            "type": "copyAndReplace",
            "srcFileUrl": "/apogeejs-net-ide/web/apogee.html",
            "replacementList": [
                {
                    "marker": "[RELEASE_VERSION]",
                    "lib": "this",
                    "type": "version"
                }
            ],
            "childFolder": "web"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-net-ide/src/**/*"
            ],
            "childFolder": "src"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-admin/ext/ace/ace_1.4.3/ace_includes/**/*"
            ],
            "childFolder": "ace_includes"
        },
        {
            "type": "concatFileList",
            "srcFileUrlList": [
                "/apogeejs-view-lib/style/apogeeapp.css",
                "/apogeejs-app-bundle/style/LiteratePage.css",
                "/apogeejs-view-lib/style/ComponentDisplay.css",
                "/apogeejs-app-bundle/style/ApogeeToolbar.css",
                "/apogeejs-ui-lib/style/dialog.css",
                "/apogeejs-ui-lib/style/DisplayAndHeader.css",
                "/apogeejs-ui-lib/style/Menu.css",
                "/apogeejs-ui-lib/style/SplitPane.css",
                "/apogeejs-ui-lib/style/TabFrame.css",
                "/apogeejs-ui-lib/style/TreeControl.css",
                "/apogeejs-ui-lib/style/ConfigurablePanel.css",
                "/apogeejs-ui-lib/style/listElement.css",
                "/apogeejs-ui-lib/style/tooltip.css",  
                "/prosemirror-admin/compiledCss/editor.css",    
                "/apogeejs-admin/ext/handsontable/handsontable_6.2.0/handsontable.full.min.css"
            ],
            "destFileName": "apogeeAppBundle.css",
            "childFolder": "apogeejs-app-bundle/style"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-ui-lib/resources/**/*",
                "/apogeejs-app-bundle/resources/**/*"
            ],
            "childFolder": "apogeejs-app-bundle/resources"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-model-lib/src/debugHook.js",
                "/apogeejs-model-lib/src/webGlobals.js"
            ],
            "childFolder": "apogeejs-app-bundle/src"
        },
        {
            "type": "packageLib",
            "format": "es",
            "sourceFileUrl": "/apogeejs-app-bundle/src/apogeeAppBundle.js",
            "outputFileName": "apogeeAppBundle.js",
            "childFolder": "apogeejs-app-bundle/src"
        }
    ]
}