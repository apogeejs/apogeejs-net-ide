{
    "repoName": "apogeejs-net-ide",

    "npmModule": {
        "taskList": [
            {
                "type": "copyAndReplace",
                "srcFileUrl": "/apogeejs-net-ide/package.json",
                "replacementList": [
                    {
                        "marker": "[RELEASE_VERSION]",
                        "lib": "this",
                        "type": "version"
                    }
                ]
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/style/apogeeAppBundle.css"
                ],
                "childFolder": "style"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/resources/**/*"
                ],
                "childFolder": "resources"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/ace_includes/**/*"
                ],
                "childFolder": "ace_includes"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/src/debugHook.js",
                    "/apogeejs-app-bundle/src/webGlobals.js",
                    "/apogeejs-app-bundle/src/apogeeAppBundle.js",
                    "/apogeejs-net-ide/src/**/*"
                ],
                "childFolder": "src"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-net-ide/electron-cli.js"
                ]
            },
            {
                "type": "copyAndReplace",
                "srcFileUrl": "/apogeejs-net-ide/web/apogee.html",
                "replacementList": [
                    {
                        "marker": "[RELEASE_VERSION]",
                        "lib": "this",
                        "type": "version"
                    }
                ],
                "childFolder": "web"
            }
        ]
    }
}